<Window x:Class="TigersProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TigersProject"
        xmlns:viewModel="clr-namespace:TigersProject.ViewModel"
        xmlns:converter="clr-namespace:TigersProject.ViewModel.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converter:Converter x:Key="Converter"/>
        <converter:MultiConverter x:Key="MultiConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="130"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0" Margin="5">
            <TabItem Header="Rozpis">
                <ListView ItemsSource="{Binding Instructors}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding JMENO}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem  Header="Výplaty">

            </TabItem>
            <TabItem Header="Den">

            </TabItem>
            <TabItem Header="Ostatní">
                <Button Content="Dispozice" Margin="10,7,278.6,237.4" Click="Button_Click" />
            </TabItem>
        </TabControl>
        <DatePicker SelectedDate="{Binding Date}" Margin="0,30,5,0"  Grid.Column="1" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
