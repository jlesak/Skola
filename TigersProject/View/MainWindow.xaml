<Window x:Class="TigersProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TigersProject"
        xmlns:viewModel="clr-namespace:TigersProject.ViewModel"
        xmlns:converter="clr-namespace:TigersProject.ViewModel.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" MinWidth="500" MinHeight="300" Width="900">
    <Window.DataContext>
        <viewModel:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converter:Converter x:Key="Converter"/>
        <converter:MultiConverter x:Key="MultiConverter"/>

    </Window.Resources>
    <Grid Margin="5,5,5,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="14.667" Background="White">
            <MenuItem Header="Nová lekce" Click="LessonClick"/>
            <MenuItem Header="Hledat Lekci" Click="LessonClick"/>
            <MenuItem Header="Výplaty"/>
            <MenuItem Header="Dispozice" Click="DispositionClick"/>
        </Menu>

        <TabControl Grid.Row="1" Grid.Column="0" Margin="5,0,5,5">
            <TabItem Height="30" Header="Rozpis">
                <DataGrid ItemsSource="{Binding DTableMonth}" AutoGenerateColumns="True">

                </DataGrid>
            </TabItem>
            <TabItem Header="Den">
                <DataGrid ItemsSource="{Binding DTableDay}" AutoGenerateColumns="True">
                    <!--<DataGrid.Columns>
                        <DataGridTextColumn Header="Instruktor"/>
                        <DataGridTextColumn CanUserReorder="false" Header="9 - 10"/>
                        <DataGridTextColumn Header="10 - 11"/>
                        <DataGridTextColumn Header="11 - 12"/>
                        <DataGridTextColumn Header="12 - 13"/>
                        <DataGridTextColumn Header="13 - 14"/>
                        <DataGridTextColumn Header="14 - 15"/>
                        <DataGridTextColumn Header="15 - 16"/>
                    </DataGrid.Columns>
-->
                </DataGrid>
            </TabItem>


        </TabControl>
        <DatePicker SelectedDate="{Binding Date}" SelectedDateFormat="Short" VerticalAlignment="Top" Height="30" Margin="155,2,601,0" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch" FontSize="14.667" />
    </Grid>
</Window>
