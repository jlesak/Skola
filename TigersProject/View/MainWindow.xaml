<Window x:Class="TigersProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TigersProject"
        xmlns:viewModel="clr-namespace:TigersProject.ViewModel"
        xmlns:converter="clr-namespace:TigersProject.ViewModel.Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <viewModel:ViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converter:Converter x:Key="Converter"/>
        <converter:MultiConverter x:Key="MultiConverter"/>
       
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0" Margin="5">
            
            <TabItem Height="30" Header="Rozpis">
                <DataGrid ItemsSource="{Binding DTableMonth}" AutoGenerateColumns="True">

                </DataGrid>
            </TabItem>
            <TabItem  Header="Výplaty">

            </TabItem>
            <TabItem Header="Den">
                <DataGrid ItemsSource="{Binding DTableDay}" AutoGenerateColumns="True">
                    <!--<DataGrid.Columns>
                        <DataGridTextColumn Header="Instruktor"/>
                        <DataGridTextColumn CanUserReorder="false" Header="9 - 10"/>
                        <DataGridTextColumn Header="10 - 11"/>
                        <DataGridTextColumn Header="11 - 12"/>
                        <DataGridTextColumn Header="12 - 13"/>
                        <DataGridTextColumn Header="13 - 14"/>
                        <DataGridTextColumn Header="14 - 15"/>
                        <DataGridTextColumn Header="15 - 16"/>
                    </DataGrid.Columns>
-->
                </DataGrid>
            </TabItem>
            <TabItem Header="Ostatní">
                <Button Content="Dispozice" Margin="10,7,278.6,237.4" Click="Button_Click" />
            </TabItem>
            
        </TabControl>
        <DatePicker SelectedDate="{Binding Date}" Margin="193,6,10.4,0" Height="30" Width="100" VerticalAlignment="Top" FontSize="14.667" SelectedDateFormat="Long"/>
        <Menu Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="49.6,133,0,0" VerticalAlignment="Top" Width="100">
            <MenuItem Header="MenuItem">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="139.2"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
